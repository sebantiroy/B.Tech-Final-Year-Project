<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">
    <ImageView
        android:id="@+id/reg_img"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:src="@drawable/registration"
        android:scaleType="centerCrop"
        ></ImageView>

    <TextView
        android:id="@+id/title_reg"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/reg_img"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:text="Registration Form"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"

        />

    <EditText
        android:id="@+id/user_name"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/title_reg"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:hint="Name..."
        android:inputType="textMultiLine"
        android:textSize="17sp"
        android:textStyle="bold"

        />
    <EditText
        android:id="@+id/user_address"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/user_name"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:hint="Address..."
        android:inputType="textMultiLine"
        android:textSize="17sp"
        android:textStyle="bold"

        />
    <EditText
        android:id="@+id/user_phone"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/user_address"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:hint="Phone..."
        android:inputType="textMultiLine"
        android:textSize="17sp"
        android:textStyle="bold"

        />


    <EditText
        android:id="@+id/user_password"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_phone"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:hint="Password..."
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="17sp"
        android:textStyle="bold"

        />
    <EditText
        android:id="@+id/user_reenter_password"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_password"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:hint="ReEnter Password..."
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="17sp"
        android:textStyle="bold"

        />




    <Button
        android:id="@+id/reg_btn"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/user_reenter_password"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="Registration"
        android:inputType="textMultiLine"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:textAllCaps="false"


        />
    />
    <Button
        android:id="@+id/cancel_reg_btn"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/reg_btn"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="cancel"
        android:inputType="textMultiLine"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_green_dark"
        android:textAllCaps="false"


        />

</RelativeLayout>