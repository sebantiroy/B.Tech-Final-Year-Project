<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context=".HomeActivity">


    <Button
        android:id="@+id/Add_product_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="180dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/buttons"
        android:padding="18dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Add Product"
        android:textColor="@android:color/white"

        >

    </Button>
    <Button
        android:id="@+id/remove_product_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Add_product_btn"

        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_design"
        android:padding="18dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Remove Product"
        android:textColor="@color/colorPrimaryDark"

        >

    </Button>
    <Button
        android:id="@+id/view_product_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remove_product_btn"

        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/buttons"
        android:padding="18dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="View Product"
        android:textColor="@android:color/white"

        >

    </Button>
    <Button
        android:id="@+id/End_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_product_btn"

        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_design"
        android:padding="18dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="End"
        android:textColor="@color/colorPrimaryDark"
        >

    </Button>


</RelativeLayout>